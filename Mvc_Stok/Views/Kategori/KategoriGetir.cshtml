    ViewBag.Title = "KategoriGetir";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using(Html.BeginForm("Guncelle","Kategori",FormMethod.Post))
            {
                <div class="form-group">
                    @Html.LabelFor(m=>m.KATEGORID)
